'''
#eliminate most common words... as words with the highest count are insignificant
word_freq={}
for word in words:
    if word in word_freq:
        word_freq[word]+=1
    else:
        word_freq[word]=1

#print(word_freq)
unique=[]
for word, freq in word_freq.items():
    if freq > 1:
        print(word)
    else:
        unique.append(word)
        
